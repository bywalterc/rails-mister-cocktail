<div class="container">
  <div>
    <%= link_to "Back", cocktails_path %>
  </div>

  <div class="new-cocktail">


    <div class="new-cocktail-content">
      <div class="page-title">
        <h1>New Cocktail</h1>
      </div>

      <%= simple_form_for(@cocktail) do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.input :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <%= f.submit class: 'btn btn-dark' %>
      <% end %>
    </div>
  </div>
</div>
